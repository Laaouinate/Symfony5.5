{% extends 'base.html.twig' %}
{% block title %}Consultation du jour {% endblock %}
{% block stylesheets %}
{% endblock %}

{% block body %}
{% if  app.user %}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Liste des consultations par jour</h1>
                 <div class="float-left padding-bottom">
                    <button type="button" class="btn btn-info">
                        Totals  <span class="badge badge-light">{{ totalJournee }}</span>
                    </button>
                </div>


                
               <table class="table table-hover" id="tables">
                    <thead>
                        <tr>
                        <th scope="col">Ipp</th>
                        <th scope="col">Patient</th>
                        <th scope="col">date prise  de rendez vous</th>
                        <th scope="col">Date RDV</th>
                        <th scope="col">Description</th>
                        <th scope="col">Realisation</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for consultation in consultationjour %}

                    <tr class="table-Default">
                      <th scope="row">{{ consultation.p_id}}</th>
                      <th scope="row">{{ consultation.p_nom ~ ' ' ~  consultation.p_prenom}}</th>
                      <th scope="row">{{ consultation.c_createdAt |date("m/d/Y") }}</th>
                      <th scope="row">{{ consultation.c_dateRdv |date("m/d/Y") }}</th>
                      <th scope="row">{{ consultation.c_description}}</th>
                      <th scope="row">{{ consultation.c_realisation}}</th>
                    </tr>


                    {% endfor %}
                    </tbody>
            </table> 



            </div>
        </div>
    </div>
    



{% block javascripts %}

{% endblock %}

{% endif %}
{% endblock %}