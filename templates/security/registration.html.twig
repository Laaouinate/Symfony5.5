{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription sur l'application</h1>  

    {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
    {{ form_row(form.username, {'label' :'Nom d\'utilisateur' ,'attr' : {'placeholder' : 'Nom d\'utilisateur...'}}) }}
    {{ form_row(form.email, {'label' :'Adresse email','attr' : {'placeholder' : 'Adresse email...'}}) }}
    {{ form_row(form.password, {'label' :'Mot de passe' ,'attr' : {'placeholder' : 'Mot de passe..'}}) }}
    {{ form_row(form.confirm_password, {'label' :'Confirmation de mot de passe' ,'attr' : {'placeholder' : 'Répétez votre mot de passe'}}) }}
    <button type="submit" class="btn btn-outline-primary">Inscription</button>
    {{ form_end(form) }}
{% endblock %}