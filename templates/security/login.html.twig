{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-md col-sm-8 col-form-label">
    <h1>Connextion !</h1>
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Adress email..." type="text" required name="_username" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Password..." type="password" required name="_password" class="form-control">
